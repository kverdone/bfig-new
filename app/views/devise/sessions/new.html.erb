<h2>Sign in</h2>
<div class="row">
	<div class="col-md-4">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {:class => 'well', role: 'form'}) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control input-lg' %>
  </div>
  <div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control input-lg' %>
</div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :style => "float:left;margin-right:10px;" %>  <%= f.label :remember_me %></div>
  <% end %>
<br />
  <%= f.submit "Sign in", :class => "btn btn-primary btn-lg", style: "width:100%;" %>
<% end %>
<%= render "links" %>
</div>
</div>